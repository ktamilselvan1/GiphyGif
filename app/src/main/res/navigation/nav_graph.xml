<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/controller"
    app:startDestination="@id/gif_detail_fragment">

    <fragment
        android:id="@+id/gif_list_fragment"
        android:name="com.tamil.assignment.features.products.ProductsListFragment"
        tools:layout="@layout/fragment_gif_list">
        <action
            android:id="@+id/navigate_to_detail"
            app:destination="@id/gif_detail_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/gif_detail_fragment"
        android:name="com.tamil.assignment.features.products.ProductDetailFragment"
        tools:layout="@layout/fragment_gif_detail">
        <argument
            android:name="gifDetail"
            android:defaultValue="@null"
            app:argType="com.tamil.assignment.data.repo.gifs.response.GifData"
            app:nullable="true" />

        <action
            android:id="@+id/navigate_to_search"
            app:destination="@id/gif_list_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>


</navigation>